<main class="add-publisher-container" >
<%= form_for @publisher do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "Update Publisher",style:"height: 3vw; width:10vw; font-size: 1vw" ,class:"add-pub-btn" %>
  </div>
<% end %>
</main>
<div class="addpub-back-link">
  <%= link_to "Back", books_path %>
</div>
  