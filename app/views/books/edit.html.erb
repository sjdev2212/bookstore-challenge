
<main class="edit-book-container">
<h1 class="edit-title">Edit book</h1>
<%= form_for @book do |f| %>
 <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
      <div class="field">
      <%= f.label :isbn %>
      <%= f.number_field :isbn %>
    </div>
         <div class="field">
      <%= f.label :author_name %>
   <%= f.text_field :author_name, value: @full_name, readonly: true %>
    </div>
         <div class="field">
      <%= f.label :review %>
      <%= f.text_area :review %>
    </div>
         <div class="field">
      <%= f.label :date_of_publication %>
      <%= f.date_field  :date_of_publication %>
    </div>
        <div class="field">
      <%= f.label :price %>
      <%= f.number_field  :price %>
    </div>

  <div class="actions">
    <%= f.submit "Update Book", style:"width: 10vw; height:3vw",class:"edit-btn" %>
      <%= f.submit "Update Book", style:"width: 18vw; height:7vw;font-size: 2.2vw",class:"edit-btn-mob" %>
  </div>
<% end %>

</main>

<div class="addpub-back-link">
  <%= link_to "Back to books", books_path %>
</div>
