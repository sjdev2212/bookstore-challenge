
<main class="authors-list-container">
<%if @authors.empty? && @search.blank?%> 
<div class="no-authors">
    <p>There are no authors yet</p>
</div>
 <% elsif @authors.empty? %>
    <div>
      <p>No results found for: <%= params[:search] %></p>
    </div>
<%else%>
    <div class="search">

 <%= render partial:  "authors/search" %>
</div>


    <h1>Authors</h1>

<section class="authors-list">
<%  @authors.each do |author| %>
<div class="author-ind">
<h5><%=  author.first_name + " " +  author.last_name%></h5>
   <p>Associated books: <%= author.associated_books %></p>
 <%= link_to "See author", author_path(author)%>
</div>
<% end%>
<%end%>
</section>
<div class="authors-links"> 
<%= link_to "Add new author", new_author_path %>
 <%= link_to "Home", books_path %>
</div>
<div class="pagination-logged">
<%= will_paginate @books %>
</div>

